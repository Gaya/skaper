    "preact": "^10.25.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.3",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
